<h1>Editing question</h1>

<%= render 'form' %>

<h2>Answers</h2>
<table>


<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.content %></td>
    <td><%= link_to 'Edit', edit_question_answer_path(@question, answer) %></td>
    <td><%= link_to 'Destroy', answer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<p>
	<%= link_to "Add answer", new_question_answer_path(@question)%>
</p>
<%= link_to 'Show', @question %> |
<%= link_to 'Back', questions_path %>
